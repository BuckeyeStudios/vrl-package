[Unit]
Description=BYOB Server - Open Source
After=network.target

[Service]
User=byob
WorkingDirectory=/opt/byob/byob/web-gui/docker-pyinstaller1
ExecStart=sh /opt/byob/byob/web-gui/startup.sh > /opt/byob/bootspool.log
ExecStop=/bin/kill -s QUIT $MAINPID
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
